<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	
	<display-name>Web Application</display-name>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>detail</servlet-name>
		<servlet-class>com.jeong.edu.ctrl.Detail</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>detail</servlet-name>
		<url-pattern>/detail.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>writeBoard</servlet-name>
		<servlet-class>com.jeong.edu.ctrl.WriteBoard</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>writeBoard</servlet-name>
		<url-pattern>/writeBoard.do</url-pattern>		
	</servlet-mapping>
	
	<servlet>
		<servlet-name>download</servlet-name>
		<servlet-class>com.jeong.edu.ctrl.Download</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>download</servlet-name>
		<url-pattern>/download.do</url-pattern>
	</servlet-mapping>
	
</web-app>