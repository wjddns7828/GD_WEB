<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	
	<display-name>Web Application</display-name>
	
	<welcome-file-list>
		<welcome-file>main.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>main</servlet-name>
		<servlet-class>com.min.edu.ctrl.MainController</servlet-class>	
	</servlet>
	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/main.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>page</servlet-name>
		<servlet-class>com.min.edu.ctrl.PageController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>page</servlet-name>
		<url-pattern>/boardPage.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.min.edu.ctrl.LoginCtrl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>userList</servlet-name>
		<servlet-class>com.min.edu.ctrl.UserList</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userList</servlet-name>
		<url-pattern>/userList.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>fileList</servlet-name>
		<servlet-class>com.min.edu.ctrl.FileList</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>fileList</servlet-name>
		<url-pattern>/fileList.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>fileWrite</servlet-name>
		<servlet-class>com.min.edu.ctrl.FileWrite</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>fileWrite</servlet-name>
		<url-pattern>/fileWrite.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>fileDetail</servlet-name>
		<servlet-class>com.min.edu.ctrl.FileDetail</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>fileDetail</servlet-name>
		<url-pattern>/fileDetail.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>replyWrite</servlet-name>
		<servlet-class>com.min.edu.ctrl.ReplyWrite</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>replyWrite</servlet-name>
		<url-pattern>/replyWrite.do</url-pattern>
	</servlet-mapping>
</web-app>