<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	
	<properties resource="properties/oracle.properties" />

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	<typeAliases>
		<typeAlias type="com.min.edu.dto.BoardDto" alias="bDto"/>
		<typeAlias type="com.min.edu.dto.UserDto" alias="uDto"/>
		<typeAlias type="com.min.edu.dto.BoardDto2" alias="bDto2" />
		<typeAlias type="com.min.edu.dto.ReplyDto" alias="rDto" />
		<typeAlias type="com.min.edu.dto.FileDto" alias="fDto" />
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${user}"/>
				<property name="password" value="${pw}"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="sqls/BoardPage_Statement.xml"/>
		<mapper resource="sqls/User_Statement.xml"/>
		<mapper resource="sqls/Board_Statement.xml"/>
	</mappers>
</configuration>