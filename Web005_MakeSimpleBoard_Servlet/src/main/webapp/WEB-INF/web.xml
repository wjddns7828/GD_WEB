<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	
	<display-name>Web Application</display-name>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>ListBoard</servlet-name>
		<servlet-class>com.min.edu.ctrl.ListBoardServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ListBoard</servlet-name>
		<url-pattern>/ListBoard.Servlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>detailBoard</servlet-name>
		<servlet-class>com.min.edu.ctrl.DetailBoard</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>detailBoard</servlet-name>
		<url-pattern>/detailBoard.Servlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>insertForm</servlet-name>
		<servlet-class>com.min.edu.ctrl.insertFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>insertForm</servlet-name>
		<url-pattern>/insertForm.Servlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ModifyForm</servlet-name>
		<servlet-class>com.min.edu.ctrl.ModifyFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ModifyForm</servlet-name>
		<url-pattern>/ModifyForm.Servlet</url-pattern>
	</servlet-mapping>
</web-app>